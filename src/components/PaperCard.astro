---
import Button from "./Button.astro"
const { src, date, event, desc} = Astro.props;
---

<section class="relative inline-block w-[250px] h-[550px] md:w-[400px] md:h-[700px] m-5">
    <!-- Card BG -->
    <div>
        <img class="absolute inset-0 w-full h-full object-cover drop-shadow-lg" src="public/paper-card.svg" alt="Paper Card Image">
    </div>
    <div>
        <img class="absolute top-0 left-1/2 transform -translate-x-1/2" src="public/tape.svg" alt="tape">
    </div>
    <!-- Card Contents -->
    <div class="absolute inset-0 flex flex-col justify-start pt-16 px-5 pb-5">
        <div class="flex justify-center mb-4">
            <img class="w-[200px] h-[200px] md:w-[300px] md:h-[300px] object-cover" src={src} alt="Placeholder Image">
        </div>
        <div class="flex-1 overflow-hidden ">
            <h2 class="font-subheader text-black md:text-[16px]">{date}</h2> 
            <h1 class="font-body font-bold text-black text-[24px] md:text-[40px]">{event}</h1>
            <p class="font-body text-black text-[12px] md:text-[16px]">{desc}</p>
            <div class="pt-4 pb-4 flex justify-center">
                <Button/
                title="LÃ¦s">
            </div>
        </div>
    </div>
</section>
